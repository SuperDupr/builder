<h1>Builders#index</h1>
<%= link_to("New Builder", new_admin_story_builder_path, class: "") %>

<!-- TODO: Add up a column for Questions count in main table -->

<% @story_builders.each do |story_builder| %>
  <%= story_builder.title %>
  <%= story_builder.questions.count %>

  <%= link_to("Show", admin_story_builder_path(story_builder)) %>
  <%= link_to("Edit", edit_admin_story_builder_path(story_builder)) %>
  <%= link_to("Destroy", admin_story_builder_path(story_builder), method: :delete, data: { confirm: "Are you sure?" }) %>
<% end %>

<% if @pagy.pages > 1 %>
  <div class="my-6 text-center">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>