<h1>Blog Index</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= blog.published ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', admin_blog_path(blog) %></td>
        <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', admin_blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- TODO: Utilize the @pagy variable for pagination -->
<% if @pagy.pages > 1 %>
  <div class="my-6 text-center">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>

<%= link_to 'New Blog', new_admin_blog_path, class: "btn btn-primary" %>
