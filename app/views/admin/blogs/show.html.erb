<header class="main-content__header flex place-content-between justify-between items-center mb-4 px-4 shadow-md py-4">
  <h4 class="main-content__page-title">
    Show Blog
  </h4>
  <div class="ml-2">
    <%= link_to("Edit Blog", edit_admin_blog_path(@blog), class: 'btn btn-primary') %>
  </div>
</header>

<div class="px-4">
  <h5>Title</h5>
  <div class="text-lg mb-1"><%= @blog.title %></div>

  <h5 class="mt-3">Published</h5>
  <div class="mb-1"><%= @blog.published ? 'Yes' : 'No' %></div>

  <div class="border p-2 mb-4 mt-3">
    <h5 class="mb-2">Tags</h5>
    <% if @blog.tag_list.present? %>
      <div class="flex items-center flex-wrap gap-3">
        <% for tag in @blog.tag_list do %>
          <div class="border px-2 py-1 rounded bg-F5F5F5"><%= tag %></div>
        <% end %>
      </div>
    <% else %>
      <div>No tags present.</div>
    <% end %>
  </div>

  <div class="border p-2 mb-4 mt-3">
    <%= @blog.accounts_shared_with %>
  </div>

  <div class="border p-2 mb-4">
    <h5 class="mb-2">Body</h5>
    <div><%= @blog.body %></div>
  </div>
</div>