<header class="flex justify-between items-center mb-4 px-4 shadow-md py-4">
  <h4 class="">New User</h4>
</header>
<div class="container mx-auto py-4">
  <div class='w-5/12 mx-auto border shadow-md rounded-lg p-5'>
    <h3 class="mb-3 text-center">Add New User</h3>
    <form>
      <div class="form-group mb-3">
        <label>Email</label>
        <input type="email" class="form-control" required>
      </div>
      <div class="form-group mb-3">
        <label>First Name</label>
        <input type="text" class="form-control" required>
      </div>
      <div class="form-group mb-3">
        <label>Last Name</label>
        <input type="text" class="form-control" required>
      </div>
      <div class="form-group mb-3">
        <label>Team</label>
        <select required>
          <option>team 1</option>
          <option>team 2</option>
            <option>team 3</option>
        </select>
      </div>
      <h5 class="mb-2">Roles</h5> 
      <div class="form-group">
        <div>
          <input id="user" class="form-radio mr-1" type="radio" name="role" >
          <label for="user" class="inline-block">User</label>
        </div>
        <div>
          <input id="admin" class="form-radio mr-1" type="radio" name="role">
          <label for="admin" class="inline-block">Admin</label>
        </div>
      </div>
      <div class="text-center mt-4">
        <input type="submit" class="btn btn-primary">
      </div>
    </form>
  </div>
</div>