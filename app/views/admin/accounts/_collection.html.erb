        resources: resources,
        table_title: "page-title"
      ) %>
    </tr>
  </thead>

  <tbody>
    <% if resources.present? %>
    <% resources.each do |resource| %>
      <tr>
        <td><%= resource.id %></td>
        <td><%= resource.name %></td>
        <td>
          <div class="flex items-center gap-2">
            <%= link_to(edit_admin_account_path(resource), class: "btn btn-primary") do %>
              <i class="fa-solid fa-pen"></i>
            <% end %>
            <%= link_to(admin_account_path(resource), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger") do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
            <%= link_to("Manage Users", organization_users_admin_account_path(resource), class: "") %>
            <%= link_to("Manage Teams", "#", class: "") %>
            <%= link_to("Manage Access", manage_access_admin_account_path(resource), 
              method: :patch, data: { confirm: "This will #{access_state_of_account(resource)} the account. Are you sure?" }, class: "") %>
          </div>
        </td>
      </tr>
    <% end %>
    <% else %>
      <tr>
        <td colspan="3">No Organizations found</td>
      </tr>
    <% end %>

