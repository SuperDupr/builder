<header class="main-content__header flex place-content-between flex justify-between items-center mb-4 px-4 shadow-md py-4">
 <h4>Manage Users in <%= @account.name %></h4>
 <div class="flex gap-2">
   <a href="#" class="btn btn-primary">Invite User</a>
   <%= render partial: 'admin/accounts/import' %>
 </div>
</header>
<div class="container mx-auto px-4">
  <%#= @account_users.count %>
  <div class="overflow-x-auto">
    <table class="border border-collapse mt-5">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Team</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% if @account_users.present? %>
          <% @account_users.each do |account_user| %>
            <tr>
              <td><%= account_user.user.first_name %></td>
              <td><%= account_user.user.last_name %></td>
              <td><%= account_user.user.email %></td>
              <td>----</td>
              <td>
                <span class="inline-flex items-center justify-center rounded-full bg-green-500 text-white p-2">
                  Accepted
                </span>
                <span class="inline-flex items-center justify-center rounded-full bg-yellow-500 text-white p-2">
                  Pending
                </span>
              </td>
              <td>
                <a href="" class="btn btn-primary">Resend Invitation</a>
                ----
              </td>
            </tr>
          <% end %>
        <% else %>
        <tr>
          <td colspan="3">No Users found</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

