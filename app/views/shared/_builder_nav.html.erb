<header>
	<div id="flash"> </div>
	<nav class="flex flex-wrap items-center justify-between px-4 py-5 bg-D9D9D9  border-b border-gray-200 dark:border-gray-800 text-sm font-medium" data-controller="toggle">
		<div class="flex items-center flex-shrink-0 mr-6">
			 <%= link_to root_path, class: "flex items-center text-gray-700 hover:text-gray-800 dark:text-gray-100 dark:hover:text-gray-300" do %>
      <%= render_svg "logo", styles: "fill-current" %>
      <span class="sr-only"><%= Jumpstart.config.application_name %></span>
    <% end %>
		</div>
		<div class="block lg:hidden">
			<button type="button" id="sidebar-open" class="flex items-center p-3 text-gray-500 lg:hidden focus:outline-none focus:text-gray-700" data-action="click->toggle#toggle touch->toggle#toggle">
				<svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
					<title>Menu</title>
					<path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
				</svg>
			</button>
		</div>
		<div class="flex-grow hidden w-full lg:flex lg:w-auto lg:pb-0" data-toggle-target="toggleable" data-transition-enter="transition-all ease-linear duration-300" data-transition-enter-from="opacity-0 h-0" data-transition-enter-to="opacity-100" data-transition-leave="transition-all ease-linear duration-300" data-transition-leave-from="opacity-100" data-transition-leave-to="opacity-0">
			<div class="lg:flex-grow">
			</div>
			<% if user_signed_in? && !current_user.admin? %>
				<%= nav_link_to tag.span("Builders"), story_builders_path, class: ["nav-link text-fte-primary hover:transform hover:scale-110"] %>
				<%= nav_link_to tag.span("Stories"), account_stories_path(current_account.id), class: ["nav-link text-fte-primary hover:transform hover:scale-110"] %>
				<%= nav_link_to tag.span("Blog"), account_blogs_path(current_account.id), class: ["nav-link text-fte-primary hover:transform hover:scale-110"] %>
			<% end %>
			<%= render(partial: "shared/settings_dropdown") %>
		</div>
	</nav>
	
</header>