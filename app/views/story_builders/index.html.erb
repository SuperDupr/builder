<div class="container mx-auto px-4">
  <div class="overflow-x-auto">
    <table class="border border-collapse mt-5">
      <thead>
        <tr>
          <th class="w-1/2">Builder Name</th>
          <th class="w-1/2 text-right">Actions</th>
        </tr>
      <thead>
      <tbody>
        <% if @story_builders.present? %>
          <% @story_builders.each do |story_builder| %>
            <tr>
              <td><%= story_builder.title %></td>
              <td>
                <div class="flex items-center gap-2">
                  <%= link_to("Start Building", new_account_story_path(account_id: current_account.id), class: "btn btn-primary") %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="text-center">No Builders found</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if @pagy.pages > 1 %>
      <div class="my-6 text-right">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  </div>
</div>
