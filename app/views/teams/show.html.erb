<div class="flex flex-wrap my-4 lg:px-4">
  <div class="w-full mb-4 lg:w-1/4 lg:p-4">
    <%= render partial: "shared/account_navbar" %>
  </div>
  <div class="w-full lg:w-3/4 lg:p-4">
    <div class="p-4 bg-white border border-gray-200 rounded-lg lg:p-10">
      <div class="sm:flex items-center justify-between mb-3">
        <h1 class="flex-1 h3">Show Team</h1>
        <div>
          <%= link_to("Back to Teams", teams_path, class: 'btn btn-primary') %>
        </div>
      </div>
      <table class="border">
        <tr>
          <th>Team Name</th>
          <td><%= @team.name %></td>
        </tr>
        <tr>
          <th>Organization Name</th>
          <td><%= @account.name %></td>
        </tr>
      </table>

      <table class="border border-collapse w-full mt-6">
        <thead>
          <tr>
            <th class="w-1/3">First Name</th>
            <th class="w-1/3">Last Name</th>
            <th class="w-1/3">Email</th>
            <th class="text-right w-1/3">Timezone</th>
          </tr>
        </thead>
        <tbody>
        <% if @users.present? %>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.time_zone %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="text-center">No Users found for team: <%= @team.name %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <% if @pagy.pages > 1 %>
        <div class="my-6 text-center">
          <%== pagy_nav(@pagy) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
