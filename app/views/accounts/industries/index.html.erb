<h1>Industries#index</h1>

<%= link_to("New Industry", new_account_industry_path(account_id: current_account.id)) %>

<% @industries.each do |industry| %>
  <%= industry.title %>

  <%= link_to("Show", account_industry_path(industry, account_id: current_account.id)) %>
  <%= link_to("Edit", edit_account_industry_path(industry, account_id: current_account.id)) %>
  <%= link_to("Destroy", account_industry_path(industry, account_id: current_account.id), method: :delete, data: {confirm: "Are you sure?"}) %>
<% end %>

