<label for="<%= node.id %>" class="flex gap-1 checkboxLabel">
  <input 
  data-checkbox-target="checkbox" 
  id="<%= node.id %>" 
  type="checkbox" 
  class="mr-1 mt-[2px] nodes" 
  value="<%= node.id %>" 
  data-text="<%= node.title %>" 
  <%= selectors.present? ? (selectors.include?(node.title) ? 'checked' : '') : '' %>
  >
  <%= node.title %>
</label>