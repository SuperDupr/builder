<div class="sidebar">
  <div class="p-4">
  <p class="fs-30">My Stories</p>
  </div>
  <% @my_stories.each do |story| %>
    <div class="bg-F5F5F5 p-4 mb-3">
      <div class="fs-20 font-bold mb-4"><%= story.title %></div>
      <p class="fs-20 mb-4">
        <%= truncate(story.ai_generated_content, length: 80) if story.ai_generated_content.present? %>
      </p>
      <% if story.ai_generated_content.present? %>
        <a href="<%= final_version_path(story) %>" class="font-bold fs-12">VIEW ></a>
      <% else %>
        <a href="<%= edit_account_story_path(story, account_id: current_account.id) %>" class="font-bold fs-12">EDIT ></a>
      <% end %>
    </div>
  <% end %>
</div>