<div class="flex flex-wrap my-4 lg:px-4">
  <div class="w-full mb-4 lg:w-1/4 lg:p-4">
    <%= render partial: "shared/account_navbar" %>
  </div>
  <div class="w-full lg:w-3/4 lg:p-4">
    <div class="p-4 bg-white border border-gray-200 rounded-lg lg:p-10">
      <div class="sm:flex items-center justify-between mb-3">
        <h1 class="flex-1 h3">Invite New User in <%= @account.name %></h1>
        <div class="flex gap-2">
           <%= link_to("Back", invited_users_account_path(@account), class: "btn btn-primary") %>
        </div>
      </div>
       <div class='w-5/12 rounded-lg'>
    <%= form_for(@account_invitation, url: account_account_invitations_path(@account.id)) do |f| %>
      <div class="form-group mb-3">
        <label>Email</label>
        <%= f.email_field(:email, class: "form-control", required: true) %>
      </div>
      <div class="form-group mb-3">
        <label>First Name</label>
        <%= f.text_field(:first_name, class: "form-control", required: true) %>
      </div>
      <div class="form-group mb-3">
        <label>Last Name</label>
        <%= f.text_field(:last_name, class: "form-control", required: true) %>
      </div>
      <div class="form-group mb-3">
        <label>Team</label>
        <%= f.select(:team_id, options_from_collection_for_select(@teams, 'id', 'name'), prompt: "Select Team") %>
      </div>
      <h5 class="mb-2">Role</h5> 
      <div class="form-group flex">
        <div class="mr-7">
          <%= radio_button_tag :roles, :member, id: 'member', class: 'form-radio', checked: true %>
          <%= label_tag :user, 'Member', class: 'inline-block ms-2', for: 'roles_member' %>
        </div>
        <div>
          <%= radio_button_tag :roles, :admin, id: 'admin', class: 'form-radio' %>
          <%= label_tag :admin, 'Admin', class: 'inline-block ms-2', for: 'roles_admin' %>
        </div>
      </div>
      <div class="text-center mt-4">
        <%= f.submit("Send", class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
    </div>
  </div>
</div>